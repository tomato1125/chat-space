.SideBar
  .SideHeader
    .HeaderBox
      %h3.HeaderBox__Name
        = current_user.name
      %ul.HeaderBox__Icon
        %li.HeaderBox__NewChatGroupIcon
          = link_to new_group_path do
            = icon('far', 'edit')
        %li.HeaderBox__AccountEditIcon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .GroupList
    - current_user.groups.each do |group|
      .GroupBox
        = link_to '#' do
          .GroupBox__Name
            = group.name
