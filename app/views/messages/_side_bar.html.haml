.SideBar
  .SideHeader
    .SideHeader__list
      %h3.SideHeader__userName
        = current_user.name
      %ul.SideHeader__iconList
        %li.SideHeader__Icon
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.SideHeader__Icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .GroupList
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group) do
          .Group__name
            = group.name
          .Group__message
            = group.show_last_message

